<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_test_open_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试openPage"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_section"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义参数"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Path: "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_open_pate_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="path不能为空"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Query: "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_open_pate_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="如:id=123&amp;mode=company"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_open_page"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="确定"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_section"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开编辑器"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模版id：" />

            <EditText
                android:id="@+id/et_template_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入模版id"
                android:inputType="number"
                android:text="14026604557898833"
                android:textSize="@dimen/edit_text_size" />

            <Button
                android:id="@+id/btn_open_template_confirm"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="确定" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作图记录id：" />

            <EditText
                android:id="@+id/et_works_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入作图记录id"
                android:inputType="number"
                android:textSize="@dimen/edit_text_size" />

            <Button
                android:id="@+id/btn_open_works_confirm"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="确定" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_section"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开结果页"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作图记录id：" />

            <EditText
                android:id="@+id/et_open_complete_works_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入作图记录id"
                android:inputType="number"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="源模版id：" />

            <EditText
                android:id="@+id/et_open_complete_source_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入源模版id"
                android:inputType="number"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结果图url：" />

            <EditText
                android:id="@+id/et_open_complete_image_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入结果图url"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_open_complete_confirm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="确定"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_open_tempalte_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="打开稿定模板中心" />

    <!-- 稿定内部开发测试使用 -->
    <Button
        android:id="@+id/btn_open_test_on_message_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开on_message测试页"
        android:visibility="gone" />

</LinearLayout>